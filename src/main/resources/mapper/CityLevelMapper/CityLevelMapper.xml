<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.totalvisit.TotalVisitMapper">

    <resultMap id="City" type="com.example.demo.entity.totalvisit.City">
        <id property="id" column="id"/>
        <result property="year" column="year"/>
        <result property="cityName" column="city_name"/>
        <result property="visitCount" column="visitCount"/>
        <result property="returnCount" column="returnCount"/>
    </resultMap>

    <select id="listAllCity" resultMap="City">
        SELECT *
        FROM `t_totalvisit`
    </select>

    <insert id="addVisitCity">
        INSERT INTO `t_totalvisit`
        (city_name, visitCount, year)
        VALUES (#{City.cityName}, #{City.visitCount}, #{City.year})
    </insert>

    <update id="addReturnCity">
        update t_totalvisit
        SET returnCount = #{City.returnCount}, year = 2019
        WHERE city_name = #{City.cityName}
    </update>

</mapper>
